# Brew/Bundle requirements
{{- if or (eq .chassisType "desktop") (eq .chassisType "laptop") }}
brew "mas"
{{- end }}

# Developer tools
{{- if has "developer" .tags }}
tap "microsoft/mssql-release", "https://github.com/Microsoft/homebrew-mssql-release"
tap "planetscale/tap"
brew "mssql-tools"
brew "mysql"
brew "nvm"
brew "pscale"
brew "terraform"
brew "vitess"
{{- if or (eq .chassisType "desktop") (eq .chassisType "laptop") }}
cask "devtoys"
cask "dbeaver-community"
cask "jetbrains-toolbox"
cask "morgen"
cask "sourcetree"
cask "visual-studio-code"
cask "warp"
#mas "AmorphousDiskMark", id: 1168254295
{{- end }}
{{- end }}

# Hackintosh only recipies
{{- if has "hackintosh" .tags }}
brew "python"
brew "python-tk"
cask "hackintool"
{{- else }}
# This is not a Hackintosh
{{- end }}

# Personal only recepies
{{- if or (eq .purpose "personal") (eq .purpose "consulting") }}
tap "noobaa/noobaa"
brew "libvirt", restart_service: :changed
brew "noobaa"
brew "tailscale"
cask "google-chrome"
mas "tailscale", id: 1475387142
{{- end }}

# GUI only recepies
{{- if or (eq .chassisType "desktop") (eq .chassisType "laptop") }}
brew "diskonaut"
brew "sleepwatcher", restart_service: :changed
brew "terminal-notifier"
cask "1password"
cask "bluetility"
cask "caffeine"
cask "cyberduck"
cask "expandrive"
cask "git-credential-manager"
cask "notion"
{{- if has "container-tools" .tags }}
cask "podman-desktop"
{{- end }}
cask "rectangle"
mas "Clocker", id: 1056643111
mas "Slack", id: 803453959
{{- end }}


# Work only recepies
{{- if or (eq .purpose "work" ) (eq .purpose "consulting" ) }}
cask "adobe-acrobat-reader"
cask "manictime"
{{- end }}

# Installed by tag
{{- if has "azure" .tags }}
brew "azure-cli"
{{- end }}
{{- if has "aws" .tags }}
brew "awscli"
{{- end }}
{{- if has "container-tools" .tags }}
brew "podman"
brew "dive"
{{- end }}
{{- if has "kubernetes" .tags }}
tap "derailed/k9s"
brew "kubernetes-cli"
brew "k9s"
brew "krew"
brew "openshift-cli"
brew "helm"
brew "tektoncd-cli"
{{- end }}

# Email client
{{- if eq .emailClient "outlook" }}
cask "microsoft-outlook"
{{- else if and (eq .chezmoi.os "darwin") (eq .emailClient "mail") }}
# Using Mail
{{- else }}
# Incorrect emailClient setting "{{ .emailClient }}"
{{- end }}

